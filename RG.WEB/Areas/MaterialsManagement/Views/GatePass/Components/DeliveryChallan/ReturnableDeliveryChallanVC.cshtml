    <style type="text/css" media="print">
        .table {
            background: inherit;
        }
    </style>
    <div class="container-fluid printArea">
        <main role="main" class="col-md-12 ml-sm-auto col-lg-12 px-4">
            <div class="row">
                <div class="col-md-12" style="text-align:center;">
                    <span class="col-md-12" style="text-align:center;font-weight:bold;">@Model.CompanyName</span>
                    <br />
                    <span class="col-md-12" style="text-align:center;font-weight:bold;">Delivery Challan</span>
                    <br />

                    @*<span class="col-md-12" style="text-align:center;font-weight:bold;"></span>
                        <br />
                        <span class="col-md-12" style="text-align:center;font-weight:bold;">Doller Rate($) :BDT</span>*@
                </div>
            </div>

            <div class="row" style="font-size:12px;">
                <input type="hidden" asp-for="GatePassID" />
                <div class="col-md-12">
                    <table class="table table-striped  table-sm text-center" id="">

                        <tbody>
                            <tr>
                                <td colspan="3" style="text-align:left">Issued To :</td>
                                <td colspan="5" style="text-align:left">@Model.CustomerName</td>
                                <td colspan="2" style="text-align:left">GP # :</td>
                                <td colspan="2" style="text-align:left">	@Model.Serial</td>
                            </tr>
                            <tr style="vertical-align:middle;">
                                <td colspan="3" style="text-align:left">Representative :</td>
                                <td colspan="5" style="text-align:left">@Model.Representative</td>
                                <td colspan="2" style="text-align:left">	Date & Time : </td>
                                <td colspan="2" style="text-align:left">@Model.DateTimeStamp </td>

                            </tr>
                            <tr style="vertical-align:middle;">
                                <td colspan="3" style="text-align:left">Representative Contact :</td>
                                <td colspan="5" style="text-align:left">@Model.RepresentativeContact</td>
                                <td colspan="2" style="text-align:left">Vehicle No :</td>
                                <td colspan="2" style="text-align:left">@Model.VehicleNo</td>



                            </tr>
                            <tr style="vertical-align:middle;">
                                <td colspan="3" style="text-align:left">	Category Name :</td>
                                <td colspan="5" style="text-align:left">	@Model.CategoryName</td>
                                <td colspan="2" style="text-align:left">	Job Description :</td>
                                <td colspan="2" style="text-align:left">	@Model.Description</td>


                            </tr>

                            <tr>
                                <td colspan="12">
                                    <table class="table table-striped table-bordered table-sm mdReport text-center" id="">
                                        <thead>

                                            <tr style="vertical-align:middle;">
                                                <th>SL</th>
                                                <th>Item Description</th>
                                                <th>Issued Qty</th>
                                                <th>Received Qty</th>
                                                <th>Gross Weight </th>
                                                <th>Unit</th>
                                                <th>Expected Date Of Return</th>
                                                <th>Remarks</th>
                                            </tr>

                                        </thead>
                                        <tbody>


                                            @foreach (var details in Model.GatePassChallanDetails)
                                            {
                                                <tr style="vertical-align:middle;">
                                                    <td>@sl</td>
                                                    <td>@details.ItemName</td>
                                                    <td class="font-weight-bold text-danger">@details.Quantity</td>
                                                    <td>@details.CartonQty</td>
                                                    <td class="font-weight-bold text-danger">@details.GrossWeight</td>
                                                    <td>@details.UnitName</td>
                                                    <td class="font-weight-bold text-danger">@details.ExpectedReturnDate</td>
                                                    <td>@details.Remarks</td>
                                                </tr>
                                                sl++;
                                                totalQuantity += details.Quantity;
                                                receivedQty += details.CartonQty;
                                                tgrossWeight += details.GrossWeight;
                                                // tNetWeight += details.NetWeight;
                                            }
                                            <tr>
                                                <td colspan="2" style="vertical-align:middle;">Total :</td>

                                                <td>@totalQuantity</td>
                                                <td>@receivedQty</td>
                                                <td>@tgrossWeight</td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br />
                <div class="row col-md-12">
                    <div class="col-md-3 col-sm-3 col-lg-3">
                        <p>Rubel</p><hr /><p>Prepared By</p>
                    </div>
                    <div class="col-md-3 col-sm-3 col-lg-3">
                        @{
                            var approveby = Model.ApprovedBy > 0 ? Model.ApprovedUser : "Not Approved";
                        }
                        <p>@approveby</p><hr /><p>Approved By</p>
                    </div>
                    <div class="col-md-3 col-sm-3 col-lg-3">
                        <p>&nbsp;</p><hr /><p>Gate Office Stamp & Sign</p>
                    </div>
                    <div class="col-md-3 col-sm-3 col-lg-3">
                        <p>&nbsp;</p><hr /><p>Receive Sign & Name</p>
                    </div>

                </div>
            </div>
            <script>

            </script>
        </main>
